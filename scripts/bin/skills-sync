#!/usr/bin/env bash

set -e

SRC_DIR="$HOME/.agents/skills"
DST_DIR="$HOME/.claude/skills"

mkdir -p "$DST_DIR"

for dir in "$SRC_DIR"/*; do
    if [ -d "$dir" ]; then
        name=$(basename "$dir")
        target="$DST_DIR/$name"

        if [ -L "$target" ] || [ -e "$target" ]; then
            rm -rf "$target"
        fi

        ln -s "$dir" "$target"
        echo "linked: $name"
    fi
done

echo "done."

