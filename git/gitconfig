[user]
	name = Yoshihide Shimoji
	email = g.y.shimoji@gmail.com

[core]
    editor = code --wait
    excludesfile = ~/.gitignore_global
    ignorecase = false
    quotepath = false
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = true
    side-by-side = true

[merge]
    conflictstyle = zdiff3

[init]
    defaultBranch = main

[alias]
  st = status
  co = checkout
  br = branch
  cm = commit -m
  ca = commit -a -m
  last = log -1 HEAD
  lg = log --oneline --graph --all --decorate
  df = diff
  dfc = diff --cached
  unstage = reset HEAD --
  undo = reset --soft HEAD~1
  pu = push
  pl = pull

[color]
    ui = auto

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    autoSetupRemote = true