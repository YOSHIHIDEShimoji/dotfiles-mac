[user]
    name = Yoshihide Shimoji
    email = g.y.shimoji@gmail.com

[core]
    editor = code --wait
    excludesfile = ~/.gitignore_global
    ignorecase = false
    quotepath = false

[init]
    defaultBranch = main

[alias]
  st = status
  co = checkout
  br = branch
  cm = commit -m
  ca = commit -a -m
  last = log -1 HEAD
  lg = log --oneline --graph --all --decorate
  df = diff
  dfc = diff --cached
  unstage = reset HEAD --
  undo = reset --soft HEAD~1
  pu = push
  pl = pull

[color]
    ui = auto

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    autoSetupRemote = true